        </ul>
        <Swap />
    </div>
    <ul
        class="md:hidden fixed bottom-0 left-0 right-0 w-full grid grid-cols-4 grid-rows-1 place-content-between px-2 py-3 bg-[#e8dcf9] dark:bg-[#2c243c] shadow-md"
    >
        {
            navItems.map((item) => (
                <li class="grid place-items-center">
                    <a
                        href={item.link}
                        class="material-symbols-outlined text-4xl"
                    >
                        {item.icon}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>

<style>
    #title {
        background-clip: border-box;
        background: linear-gradient(to right, #ff5d01, #8b5cf6);
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
    }
</style>
