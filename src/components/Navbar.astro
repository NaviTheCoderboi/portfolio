---
import logo from "+asset@logo.png?url";
import logoLight from "+asset@logo-light.png?url";
import Swap from "+component@Swap.astro";

interface NavItems {
    name: string;
    link: string;
    icon: string;
}

const navItems: NavItems[] = [
    {
        name: "Home",
        link: "/#home",
        icon: "home",
    },
    {
        name: "About",
        link: "/#about",
        icon: "person",
    },
    {
        name: "Projects",
        link: "/#projects",
        icon: "construction",
    },
    {
        name: "Blog",
        link: "/blog",
        icon: "book_5",
    },
];
---

<nav
    class="sticky grid place-content-between grid-rows-1 grid-cols-2 md:grid-cols-3 z-50 top-0 left-0 py-3 px-6 bg-[#e8dcf9] dark:bg-[#2c243c] shadow-md"
>
    <div
        class="flex items-center gap-4 text-4xl font-bold tracking-tighter"
        id="title"
    >
        <img
            src={logo}
            alt="logo"
            height={70}
            width={70}
            class="hidden dark:block"
        />
        <img
            src={logoLight}
            alt="logo"
            height={70}
            width={70}
            class="dark:hidden"
        />
        <span class="hidden md:block"> NaviTheCoderboi</span>
    </div>
    <ul class="justify-center items-center hidden md:flex">
        <ul
            class="flex justify-center items-center py-2 px-2 rounded-full bg-gradient-to-br from-[#a96efa] to-[#FF5D01]"
        >
            <ul
                class="flex justify-center items-center gap-3 p-2 bg-[#e8dcf9] dark:bg-[#2c243c] rounded-full"
            >
                {
                    navItems.map((navItem) => (
                        <li class="px-2 py-1 rounded-full hover:bg-orange-500 text-2xl font-light tracking-tighter transition-colors duration-300">
                            <a href={navItem.link}>{navItem.name}</a>
                        </li>
                    ))
                }
            </ul>
        </ul>
    </ul>
    <div class="flex justify-end items-center">
        <Swap />
    </div>
    <ul
        class="md:hidden fixed bottom-0 left-0 right-0 w-full grid grid-cols-4 grid-rows-1 place-content-between px-2 py-3 bg-[#e8dcf9] dark:bg-[#2c243c] shadow-md"
    >
        {
            navItems.map((item) => (
                <li class="grid place-items-center">
                    <a
                        href={item.link}
                        class="material-symbols-outlined text-4xl"
                    >
                        {item.icon}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>

<style>
    #title {
        background-clip: border-box;
        background: linear-gradient(to right, #ff5d01, #8b5cf6);
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
    }
</style>
