---
import logo from "+asset@logo.png?url";
import logoLight from "+asset@logo-light.png?url";
import Swap from "+component@Swap.astro";
import { Image } from "astro:assets";

interface NavItems {
    name: string;
    link: string;
    icon: string;
}

const navItems: NavItems[] = [
    {
        name: "Home",
        link: "/#home",
        icon: "home",
    },
    {
        name: "Skills",
        link: "/#skills",
        icon: "psychology",
    },
    {
        name: "Projects",
        link: "/#projects",
        icon: "construction",
    },
    {
        name: "Blog",
        link: "/blog",
        icon: "book_5",
    },
];
---

<nav
    class="sticky grid place-content-between grid-rows-1 grid-cols-2 md:grid-cols-3 z-50 top-0 left-0 py-3 px-6 bg-[#e8dcf9] dark:bg-[#2c243c] shadow-md"
>
    <div
        class="flex items-center gap-4 text-4xl font-bold tracking-tighter"
        id="title"
    >
        <Image
            src={logo}
            alt="logo"
            height={70}
            width={70}
            class="hidden dark:block"
        />
        <Image
            src={logoLight}
            alt="logo"
            height={70}
            width={70}
            class="dark:hidden"
        />
        <span class="hidden lg:block"> NaviTheCoderboi</span>
    </div>
    <ul class="justify-center items-center hidden md:flex">
        <ul
            class="flex justify-center items-center py-2 px-2 rounded-full bg-gradient-to-br from-[#a96efa] to-[#FF5D01]"
        >
            <ul
                class="flex justify-center items-center gap-3 p-2 bg-[#e8dcf9] dark:bg-[#2c243c] rounded-full"
            >
                {
                    navItems.map((navItem) => (
                        <li class="px-2 py-1 rounded-full hover:bg-orange-500 text-2xl font-light tracking-tighter transition-colors duration-300">
                            <a href={navItem.link}>{navItem.name}</a>
                        </li>
                    ))
                }
            </ul>
        </ul>
    </ul>
    <div class="flex justify-end items-center gap-8">
        <ul class="hidden lg:flex justify-center items-center px-2 gap-4">
            <li
                class="hover:-translate-y-2 duration-150 brightness-75 hover:brightness-100 hover:scale-[1.02]"
            >
                <a href="https://github.com/NaviTheCoderboi" target="_blank"
                    ><svg
                        stroke="currentColor"
                        fill="currentColor"
                        stroke-width="0"
                        viewBox="0 0 1024 1024"
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-10 h-10"
