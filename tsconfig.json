{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "+layout@*": ["src/layouts/*"],
            "+component@*": ["src/components/*"],
            "+style@*": ["src/styles/*"],
            "+asset@*": ["src/assets/*"],
            "+utils@*": ["src/utils/*"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ],
        "allowJs": true
    }
}
